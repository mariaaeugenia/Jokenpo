<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/fragmentgame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            tools:context=".ui.fragments.GameFragment">
        <TextView
                android:text="Me"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/playerImage" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/textView0"/>
        <ImageView
                android:src="@drawable/custom_edittext"
                android:layout_width="120dp"
                android:layout_height="120dp" android:id="@+id/playerImage"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                android:layout_marginTop="20dp" app:layout_constraintEnd_toEndOf="@+id/androidImage"
                app:layout_constraintStart_toStartOf="@+id/androidImage"/>
        <ImageView
                android:src="@drawable/custom_edittext"
                android:layout_width="120dp"
                android:layout_height="120dp" android:id="@+id/imageView4"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/androidTextView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.498"/>
        <View
                android:layout_width="wrap_content"
                android:background="@color/colorThird"
                android:layout_height="150dp" android:id="@+id/view" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textFontWeight="@android:integer/config_mediumAnimTime"
                android:text="Android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/view" app:layout_constraintTop_toTopOf="@+id/textView6"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"/>
        <TextView
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/colorSecondary"
                android:textFontWeight="@android:integer/config_mediumAnimTime"
                android:text="X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/view"
                android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view" app:layout_constraintEnd_toStartOf="@+id/view"
                app:layout_constraintHorizontal_bias="0.5"/>
        <TextView
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textFontWeight="@android:integer/config_mediumAnimTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/aboutButton"
                android:text="Your name"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/textView6" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/view" app:layout_constraintTop_toTopOf="@+id/textView6"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"/>
        <TextView
                android:text="0"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="@color/colorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/playerScoreTextView"
                app:layout_constraintTop_toBottomOf="@+id/aboutButton"
                android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="@+id/aboutButton"
                app:layout_constraintEnd_toEndOf="@+id/aboutButton"/>
        <TextView
                android:text="0"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="@color/colorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/androidScoreTextView"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="@+id/textView4"/>
        <TextView
                android:text="Android"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/androidTextView"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/view" app:layout_constraintStart_toStartOf="@+id/androidImage"
                app:layout_constraintEnd_toEndOf="@+id/androidImage"/>
        <ImageView
                android:src="@drawable/custom_edittext"
                android:layout_width="120dp"
                android:layout_height="120dp" android:id="@+id/androidImage"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/androidTextView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.498"/>
        <ImageView
                android:src="?attr/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="2dp" android:id="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/playerImage"/>
        <ImageView
                android:src="@mipmap/rock_ico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rockImage"
                app:layout_constraintEnd_toStartOf="@+id/scissorsImage" android:layout_marginEnd="30dp"
                app:layout_constraintTop_toTopOf="@+id/scissorsImage"
                app:layout_constraintBottom_toBottomOf="@+id/scissorsImage" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <ImageView
                android:src="@mipmap/papper_ico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/papperImage"
                app:layout_constraintStart_toEndOf="@+id/scissorsImage" android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="@+id/scissorsImage"
                app:layout_constraintBottom_toBottomOf="@+id/scissorsImage" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

    <ImageView
            android:src="@mipmap/scissors_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/scissorsImage"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rockImage" app:layout_constraintEnd_toStartOf="@+id/papperImage"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView0" app:layout_constraintVertical_bias="1.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
